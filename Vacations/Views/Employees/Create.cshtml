@using System.Linq
@using Vacations.Controllers
@using Vacations_DomainModel.Models.Department
@model EmployeeViewModel

<h2>Добавление нового работника</h2>
@using (Html.BeginForm(
actionName: nameof(EmployeesController.Create),
controllerName: Html.ViewContext.RouteData.Values["controller"].ToString(),
FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div>
        <div>
            <label style="width:200px"> Имя работника</label>
            @Html.EditorFor(model => model.FirstName)
        </div>
        <div>
            <label style="width:200px"> Фамилия работника</label>
            @Html.EditorFor(model => model.LastName)
        </div>

        <div>
            <label style="width:200px"> Табельный номер </label>
            @Html.EditorFor(model => model.PersonnelNumber)
        </div>

        <div>
            <label style="width:200px"> Должность </label>
            @Html.EditorFor(model => model.EmployeesPosition)
        </div>
        <div>
            <label style="width:200px"> Отдел </label>
            @Html.DropDownList("department", Model.Departments as SelectList, Model.Department.ToString(), new { @class = "form-control" })
        </div>

        <div>
            <label style="width:200px"> Продолжительность отпуска </label>
            @Html.EditorFor(model => model.CurrentDurationOfVocation)
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить работника" class="btn btn-primary" />
    </div>
}